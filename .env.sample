# Sample environment variables for production/local testing
# Copy to .env and fill values before running with production settings

# Django
SECRET_KEY=replace-me-with-a-secure-random-string
# Use sqlite for local testing: sqlite:///./db.sqlite3
# Or a full database URL for Postgres: postgres://USER:PASS@HOST:PORT/NAME
DATABASE_URL=sqlite:///./db.sqlite3
ALLOWED_HOSTS=127.0.0.1,localhost

# AWS S3 (optional - required if using S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Other options
# DEBUG should be False in production
DEBUG=False
